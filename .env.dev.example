# ==========================================
# MODIFY Project - Development Environment
# ==========================================

# --- PROJECT SETTINGS ---
PROJECT_NAME="MODIFY AI Shopping Mall"
# dev | prod
ENVIRONMENT=dev
DEBUG=true
# Asia/Seoul
TZ=Asia/Seoul

# --- SECURITY (CRITICAL) ---
# 예: 098f6bcd4621d373cade4e832627b4f6...
JWT_SECRET_KEY=change_this_to_a_secure_random_string_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

# Frontend 데이터 암호화용 키
ENCRYPTION_KEY=change_this_to_32_byte_key_for_fernet_encryption

# --- DATABASE (PostgreSQL) ---
POSTGRES_SERVER=postgres
POSTGRES_USER=modify_user
POSTGRES_PASSWORD=modify_password
POSTGRES_DB=modify_db
POSTGRES_PORT=5432
# Connection Pool
DB_POOL_SIZE=30
DB_MAX_OVERFLOW=20

# --- VECTOR DB (pgvector) ---
# Phase 3 CLIP Model Dimension (Must match model output)
EMBEDDING_DIMENSION=768

# --- REDIS (Cache & Celery Broker) ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# --- AI SERVICE & GOOGLE API ---


# [필수] 구글 콘솔에서 발급받은 API 키

GOOGLE_API_KEY=

# [필수] 구글 Custom Search Engine ID

GOOGLE_CSE_ID=

# [선택] 일일 허용 쿼터 횟수

GOOGLE_API_DAILY_QUOTA=100

WATSONX_API_KEY=
WATSONX_PROJECT_ID=
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# --- CELERY WORKER ---
# Seconds
CELERY_TASK_TIME_LIMIT=600

# --- STORAGE ---
# local | s3
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=/app/storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=ap-northeast-2

SUPERUSER_EMAIL=admin@modify.com
SUPERUSER_PASSWORD=super_secure_password1

# Email Settings
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME="MODIFY Admin"
MAIL_STARTTLS=True
MAIL_SSL_TLS=False
USE_CREDENTIALS=True
VALIDATE_CERTS=True